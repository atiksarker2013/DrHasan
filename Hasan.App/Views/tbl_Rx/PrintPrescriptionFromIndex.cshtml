                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Mrno, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Mrno, new { htmlAttributes = new { id = "Mrno", @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EntryDate, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.EntryDate, new { htmlAttributes = new { id = "EntryDate", @class = "form-control" } })
                        </div>
                    </div>

                </div>

            </div>



            

            <table   >
                <tr>
                    <th>Visual Acuity :</th>
                </tr>
                <tr>
                    <td><h5>Right Eye :</h5></td>
