                    <td><h5>MrNo :</h5></td>
                    <td><h5>@Html.DisplayFor(m => m.Mrno)</h5></td>
                     
                </tr>
                <tr>
                    <td><h5>Age :</h5></td>
                    <td><h5>@Html.DisplayFor(m => m.Age)</h5></td>

                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
